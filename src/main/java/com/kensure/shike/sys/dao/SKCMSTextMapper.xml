<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kensure.shike.sys.dao.SKCMSTextDao"><!--dsName="" saasAspect=""-->
	<!-- <cache readOnly="true"/> -->
    <sql id="allFields">
		id,
		content,
		created_time as createdTime
    </sql>
    
	<sql id="insertFields">
		id,
		content,
		created_time
    </sql>
	
	<insert id="insert" parameterType="com.kensure.shike.sys.model.SKCMSText">
		insert into sk_cms_text (<include refid="insertFields"/>)
		values (
			#{id},
			#{content},
			#{createdTime}
		)
	</insert>
	
	<insert id="insertInBatch" parameterType="com.kensure.shike.sys.model.SKCMSText">
		insert into sk_cms_text (<include refid="insertFields"/>) values 
		<foreach collection="list" item="item" index="index" separator=",">
			(
				#{item.id},
				#{item.content},
				#{item.createdTime}
			)
		</foreach>
	</insert>   		
	
    <sql id="whereClause">
		<if test="content != null">			
			content = #{content}			
		</if>
		<if test="createdTime != null">			
			and created_time = #{createdTime}			
		</if>
	</sql>
    
	<select id="selectOne" resultType="com.kensure.shike.sys.model.SKCMSText" parameterType="Long" >
		select <include refid="allFields"/> 
		  from sk_cms_text 
		 where id = #{id} 
	</select>
	
	<select id="selectByIds" parameterType="List" resultType="com.kensure.shike.sys.model.SKCMSText">
		select <include refid="allFields"/> from sk_cms_text 
		where id in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</select>
		
	<select id="selectAll" resultType="com.kensure.shike.sys.model.SKCMSText">
		select <include refid="allFields"/> 
		from sk_cms_text 
	</select>

	<select id="selectCount" resultType="long">
		select count(*) from sk_cms_text 
	</select>
	
	<select id="selectCountByWhere" parameterType="Map" resultType="Long">
		select count(*) from sk_cms_text 
		<where>
		    <include refid="whereClause"/>
		</where>
	</select>

	<select id="selectByWhere" parameterType="Map" resultType="com.kensure.shike.sys.model.SKCMSText">
		select <include refid="allFields"/>
		from sk_cms_text 
		<where>
		    <include refid="whereClause"/>
		</where>				
		<if test="orderby != null">
			ORDER BY ${orderby}
		</if>
	</select>
	
	<sql id="setComn">		
		<if test="content != null">
			content = #{content},
		</if>
		<if test="createdTime != null">
			created_time = #{createdTime}
		</if>
	</sql>
	
	<update id="update" parameterType="com.kensure.shike.sys.model.SKCMSText">
		 update sk_cms_text 
		    <set>
		    	<include refid="setComn"/>
			</set>
		  where id = #{id}
	</update>
	
	<update id="updateByMap" parameterType="Map">
		 update sk_cms_text 
		    <set>
		    	<include refid="setComn"/>
			</set>
		  where id = #{id}
	</update>
	
	<delete id="delete">
		delete from sk_cms_text where id = #{id}
	</delete>
	
	<delete id="deleteMulti" parameterType="List">
		delete from sk_cms_text
		where id in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</delete>
	
	<delete id="deleteByWhere" parameterType="Map">
		delete from sk_cms_text 
		<where>
		    <include refid="whereClause"/>
		</where>
	</delete>	

</mapper>    
