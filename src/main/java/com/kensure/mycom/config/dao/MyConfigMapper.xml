<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kensure.mycom.config.dao.MyConfigDao"><!--dsName="" saasAspect=""-->
	<!-- <cache readOnly="true"/> -->
    <sql id="allFields">
		id,
		val,
		name
    </sql>
    
	<sql id="insertFields">
		id,
		val,
		name
    </sql>
	
	<insert id="insert" parameterType="com.kensure.mycom.config.model.MyConfig">
		insert into base_config (<include refid="insertFields"/>)
		values (
			#{id},
			#{val},
			#{name}
		)
	</insert>
	
	<insert id="insertInBatch" parameterType="com.kensure.mycom.config.model.MyConfig">
		insert into base_config (<include refid="insertFields"/>) values 
		<foreach collection="list" item="item" index="index" separator=",">
			(
				#{item.id},
				#{item.val},
				#{item.name}
			)
		</foreach>
	</insert>   		
	
    <sql id="whereClause">
		<if test="name != null">			
			name = #{name}			
		</if>
	</sql>
    
	<select id="selectOne" resultType="com.kensure.mycom.config.model.MyConfig" parameterType="String" >
		select <include refid="allFields"/> 
		  from base_config 
		 where id = #{id} 
	</select>
	
	<select id="selectByIds" parameterType="List" resultType="com.kensure.mycom.config.model.MyConfig">
		select <include refid="allFields"/> from base_config 
		where id in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</select>
		
	<select id="selectAll" resultType="com.kensure.mycom.config.model.MyConfig">
		select <include refid="allFields"/> 
		from base_config 
	</select>

	<select id="selectCount" resultType="long">
		select count(*) from base_config 
	</select>
	
	<select id="selectCountByWhere" parameterType="Map" resultType="Long">
		select count(*) from base_config 
		<where>
		    <include refid="whereClause"/>
		</where>
	</select>

	<select id="selectByWhere" parameterType="Map" resultType="com.kensure.mycom.config.model.MyConfig">
		select <include refid="allFields"/>
		from base_config 
		<where>
		    <include refid="whereClause"/>
		</where>				
		<if test="orderby != null">
			ORDER BY ${orderby}
		</if>
	</select>
	
	<sql id="setComn">		
		<if test="name != null">
			name = #{name}
		</if>
	</sql>
	
	<update id="update" parameterType="com.kensure.mycom.config.model.MyConfig">
		 update base_config 
		    <set>
		    	<include refid="setComn"/>
			</set>
		  where id = #{id}
	</update>
	
	<update id="updateByMap" parameterType="Map">
		 update base_config 
		    <set>
		    	<include refid="setComn"/>
			</set>
		  where id = #{id}
	</update>
	
	<delete id="delete">
		delete from base_config where id = #{id}
	</delete>
	
	<delete id="deleteMulti" parameterType="List">
		delete from base_config
		where id in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</delete>
	
	<delete id="deleteByWhere" parameterType="Map">
		delete from base_config 
		<where>
		    <include refid="whereClause"/>
		</where>
	</delete>	

</mapper>    
